<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <title>MyBank</title>
</head>
<body>
    <div class="container">
        <div class="jumbotron text-center">
            <h1>MyBank</h1>
            <p>Transfer Between Your Accounts and Another User's Account:</p>
            <p><%= user.username %></p>
            <form action="/transfer-other-accounts" method="post">
                <div class="form-group">
                    <label>From: </label>
                    <select type="text" class="form-control" name="from">
                        <% accounts.forEach(function(account) { %>
                            <option value="<%= account.account_id %>"><%= account.accountname %> - <%= account.account_id %> - <%= account.balance %>
                        <% }); %>
                    </select>
                </div>
                <div class="form-group">
                    <label>Target Account Email Address: </label>
                    <input type="text" class="form-control" name="email">
                </div>
                <div class="form-group">
                    <label>Amount: </label>
                    <input type="text" class="form-control" name="amount">
                </div>
                <div class="form-group">
                    <label>Reason: </label>
                    <input type="text" class="form-control" name="reason">
                </div>
                <button type="submit" class="btn btn-primary">Transfer</button>
            </form>
        </div>
    </div>
</body>
</html>
